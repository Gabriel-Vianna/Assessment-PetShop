@model Infrastructure.ScheduleModel.ScheduleModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar Agendamento</h1>

<h3>Tem certeza que deseja apagar este agendamento?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Identificador
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            Nome do Pet
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PetName)
        </dd>
        <dt class = "col-sm-2">
            Raça do Pet
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PetBreed)
        </dd>
        <dt class = "col-sm-2">
            Data do Agendamento
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SchedulingDate)
        </dd>
        <dt class = "col-sm-2">
            Dono do Pet
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PetOwner)
        </dd>
        <dt class = "col-sm-2">
            Nº do Telefone
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para listagem</a>
    </form>
</div>
